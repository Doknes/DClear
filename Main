package me.doknes;


import me.doknes.Config;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.java.JavaPlugin;
 
public class Main extends JavaPlugin {
 
    @Override
    public void onEnable() {
        System.out.println(ChatColor.GREEN + this.getName() + " Is now enable!");
		Config.registerConfig("Config", "Config.yml", this);
    }
 
    @Override
    public void onDisable() {
       System.out.println(ChatColor.RED + this.getName() + ChatColor.GOLD + " Is now disable!");
    }   
   
    @Override
    public boolean onCommand(CommandSender sender, Command command,String label, String[] args) {
 
        if(label.equalsIgnoreCase("dclear")){
            if(!(sender instanceof Player)){
                sender.sendMessage(" ERROR!!! YOU MUST WRITE THIS COMMAND IN GAME!!! ");
                return false;
            }
            Player player =  (Player) sender;
            if(player.hasPermission("Dc.clear")){
                player.sendMessage(ChatColor.GOLD + " You were cleared chat! ");
                player.chat("                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            "+ ChatColor.GOLD + getConfig().getString("message"));
                Bukkit.broadcastMessage(ChatColor.GREEN + player.getName() + ChatColor.GOLD + getConfig().getString("who"));
                player.chat("/spawn");
            }
            else
            {
                player.sendMessage(ChatColor.RED + "You dont have permission");
            }
           
        }
		return false;
    }
}
   
   
   
   
